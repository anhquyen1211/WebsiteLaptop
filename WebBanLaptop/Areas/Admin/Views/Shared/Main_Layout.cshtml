<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">
    <link href="~/Content/AdminCSS/plugins.bundle.css" rel="stylesheet" />
    <link href="~/Content/AdminCSS/style.bundle.css" rel="stylesheet" />
    <!--end::Global Stylesheets Bundle-->
    <!--Boxicons CSS-->
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <link rel="shortcut icon" href="~/Content/Images/logo/logo1.png" type="image/png" />
    <title>@ViewBag.Title</title>
</head>
<body id="kt_body"
      class="header-fixed header-tablet-and-mobile-fixed toolbar-enabled toolbar-fixed aside-enabled aside-fixed"
      style="
      --kt-toolbar-height: 55px;
      --kt-toolbar-height-tablet-and-mobile: 55px;
    ">
    <!--begin::Main-->
    <!--begin::Root-->
    <div class="d-flex flex-column flex-root">
        <!--begin::Page-->
        <div class="page d-flex flex-row flex-column-fluid">
            <!--begin::Aside-->
            <div id="kt_aside" class="aside aside-dark aside-hoverable">
                <div class="aside-logo flex-column-auto" id="kt_aside_logo">
                    <!--begin::Logo-->
                    <a class="fs-1 fw-bolder text-white" href="@Url.Action("Index","Dashboard")">
                        <span>LQ SHOP</span>
                    </a>
                    <!--end::Logo-->
                    <!--begin::Aside toggler-->
                    <div id="kt_aside_toggle"
                         class="btn btn-icon w-auto px-0 btn-active-color-primary aside-toggle"
                         data-kt-toggle="true"
                         data-kt-toggle-state="active"
                         data-kt-toggle-target="body"
                         data-kt-toggle-name="aside-minimize">
                        <i class='bx bx-chevrons-left' style="font-size: 30px;" undefined></i>
                    </div>
                    <!--end::Aside toggler-->
                </div>
                <!--end::Brand-->
                <!--begin::Aside menu-->
                <div class="aside-menu flex-column-fluid">
                    <!--begin::Aside Menu-->
                    <div class="hover-scroll-overlay-y my-5 my-lg-5"
                         id="kt_aside_menu_wrapper"
                         data-kt-scroll="true"
                         data-kt-scroll-activate="{default: false, lg: true}"
                         data-kt-scroll-height="auto"
                         data-kt-scroll-dependencies="#kt_aside_logo, #kt_aside_footer"
                         data-kt-scroll-wrappers="#kt_aside_menu"
                         data-kt-scroll-offset="0">
                        <!--begin::Menu-->
                        <div class="menu menu-column menu-title-gray-800 menu-state-title-primary menu-state-icon-primary menu-state-bullet-primary menu-arrow-gray-500"
                             id="#kt_aside_menu"
                             data-kt-menu="true">
                            <div class="menu-item">
                                <div class="menu-content pt-8 pb-0">
                                    <span class="menu-section text-muted text-uppercase fs-8 ls-1">Bảng điều khiển</span>
                                </div>
                            </div>
                            <div class="menu-item">
                                <a class="menu-link
                                   @(ViewContext.RouteData.Values["Controller"].ToString() == "DashBoard" ? "active" : "")"
                                   href="@Url.Action("Index","DashBoard")">
                                    <span class="menu-icon">
                                        <i class='bx bxs-dashboard' style="font-size: 20px;"></i>
                                    </span>
                                    <span class="menu-title">Bảng điều khiển</span>
                                </a>
                            </div>
                            <div class="menu-item">
                                <div class="menu-content pt-8 pb-0">
                                    <span class="menu-section text-muted text-uppercase fs-8 ls-1">Quản lý sản phẩm</span>
                                </div>
                            </div>
                            <div class="menu-item">
                                <a class="menu-link
                                   @(ViewContext.RouteData.Values["Controller"].ToString() == "ProductAdmin" ? "active" : "")"
                                   href="@Url.Action("Index","ProductAdmin")">
                                    <span class="menu-icon">
                                        <i class='bx bxl-product-hunt' style="font-size: 20px;"></i>
                                    </span>
                                    <span class="menu-title">Sản phẩm</span>
                                </a>
                            </div>
                            <div class="menu-item">
                                <a class="menu-link @(ViewContext.RouteData.Values["Controller"].ToString() == "Brand" ? "active" : "")"
                                   href="@Url.Action("Index","Brand")">
                                    <span class="menu-icon">
                                        <i class='bx bx-check-shield icon' style="font-size: 20px;"></i>
                                    </span>
                                    <span class="menu-title">Thương hiệu</span>
                                </a>
                            </div>
                            <div class="menu-item">
                                <a class="menu-link @(ViewContext.RouteData.Values["Controller"].ToString() == "Genre" ? "active" : "")"
                                   href="@Url.Action("Index","Genre")">
                                    <span class="menu-icon">
                                        <i class='bx bx-category-alt' style="font-size: 20px;"></i>
                                    </span>
                                    <span class="menu-title">Danh mục sản phẩm</span>
                                </a>
                            </div>
                            <div class="menu-item">
                                <a class="menu-link @(ViewContext.RouteData.Values["Controller"].ToString() == "Feedback" ? "active" : "")"
                                   href="@Url.Action("Index","Feedback")">
                                    <span class="menu-icon">
                                        <i class='bx bx-edit' style="font-size: 20px;"></i>
                                    </span>
                                    <span class="menu-title">Đánh giá sản phẩm</span>
                                </a>
                            </div>
                            <div class="menu-item">
                                <a class="menu-link @(ViewContext.RouteData.Values["Controller"].ToString() == "Discount" ? "active" : "")"
                                   href="@Url.Action("Index","Discount")">
                                    <span class="menu-icon">
                                        <i class='bx bxs-discount' style="font-size: 20px;"></i>
                                    </span>
                                    <span class="menu-title">Chương trình giảm giá</span>
                                </a>
                            </div>
                            <div class="menu-item">
                                <div class="menu-content pt-8 pb-0">
                                    <span class="menu-section text-muted text-uppercase fs-8 ls-1">Quản lý đặt hàng</span>
                                </div>
                            </div>
                            <div class="menu-item">
                                <a class="menu-link @(ViewContext.RouteData.Values["Controller"].ToString() == "Order" ? "active" : "")"
                                   href="@Url.Action("Index","Order")">
                                    <span class="menu-icon">
                                        <i class='bx bxs-cart' style="font-size: 20px;"></i>
                                    </span>
                                    <span class="menu-title">Danh sách đơn hàng</span>
                                </a>
                            </div>
                            <div class="menu-item">
                                <div class="menu-content pt-8 pb-0">
                                    <span class="menu-section text-muted text-uppercase fs-8 ls-1">Quản lý tài khoản</span>
                                </div>
                            </div>
                            <div class="menu-item">
                                <a class="menu-link @(ViewContext.RouteData.Values["Controller"].ToString() == "Auth" ? "active" : "")"
                                   href="@Url.Action("Index","Auth")">
                                    <span class="menu-icon">
                                        <i class='bx bxs-user-account' style="font-size: 20px;"></i>
                                    </span>
                                    <span class="menu-title">Tài khoản</span>
                                </a>
                            </div>
                        </div>
                        <!--end::Menu-->
                    </div>
                    <!--end::Aside Menu-->
                </div>
                <!--end::Aside menu-->
            </div>
            <!--end::Aside-->
            <!--begin::Wrapper-->
            <div class="wrapper d-flex flex-column flex-row-fluid" id="kt_wrapper">
                @Html.Partial("_HeaderLayout")
                <!--begin::Content-->
                <div class="content d-flex flex-column flex-column-fluid" id="kt_content">
                    @RenderBody()
                    @Html.Partial("_MessageAlert")
                </div>
                <!--end::Content-->
                @Html.Partial("_FooterLayout")
            </div>
            <!--end::Wrapper-->
        </div>
        <!--end::Page-->
    </div>
    <!--end::Root-->
    <!--end::Main-->
    <!--begin::Scrolltop-->
    <div id="kt_scrolltop" class="scrolltop" data-kt-scrolltop="true">
        <!--begin::Svg Icon | path: icons/duotune/arrows/arr066.svg-->
        <span class="svg-icon">
            <svg xmlns="http://www.w3.org/2000/svg"
                 width="24"
                 height="24"
                 viewBox="0 0 24 24"
                 fill="none">
                <rect opacity="0.5"
                      x="13"
                      y="6"
                      width="13"
                      height="2"
                      rx="1"
                      transform="rotate(90 13 6)"
                      fill="black" />
                <path d="M12.5657 8.56569L16.75 12.75C17.1642 13.1642 17.8358 13.1642 18.25 12.75C18.6642 12.3358 18.6642 11.6642 18.25 11.25L12.7071 5.70711C12.3166 5.31658 11.6834 5.31658 11.2929 5.70711L5.75 11.25C5.33579 11.6642 5.33579 12.3358 5.75 12.75C6.16421 13.1642 6.83579 13.1642 7.25 12.75L11.4343 8.56569C11.7467 8.25327 12.2533 8.25327 12.5657 8.56569Z"
                      fill="black" />
            </svg>
        </span>
        <!--end::Svg Icon-->
    </div>
    <!--end::Scrolltop-->
    <!--begin::Javascript-->
    <!--begin::Global Javascript Bundle(used by all pages)-->
    <script src="~/Scripts/AdminJS/scripts.bundle.js"></script>
    <script src="~/Scripts/AdminJS/plugins.bundle.js"></script>
    <script src="~/Scripts/custom-notifi.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
