@model WebBanLaptop.Models.RegisterViewModels
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- Start breadcrumb section -->
<div class="breadcrumb-section breadcrumb-bg-color--black">
    <div class="breadcrumb-wrapper">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="breadcrumb-nav breadcrumb-nav-color--black breadcrumb-nav-hover-color--golden">
                        <nav aria-label="breadcrumb">
                            <ul>
                                <li><a href="@Url.Action("Index","Home")">Trang Chủ</a></li>
                                <li class="active" aria-current="page">
                                    Đăng ký
                                </li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End breadcrumb section -->
<!-- Start customer register section -->
<div class="customer-register">
    <div class="container">
        <div class="row d-xl-flex justify-content-center">
            <!--Start register area-->
            <div class="col-lg-4 col-md-4">
                <div class="account_form">
                    <h3 class="text-center">Đăng ký</h3>
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                <form action="#" method="POST">
                    <label class="mb-1">Email <span class="text-danger">*</span></label>
                    <div class="default-form-box">
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { type = "text" } })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>
                    <label class="mb-1">Họ tên<span class="text-danger">*</span></label>
                    <div class="default-form-box">
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { type = "text" } })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>
                    <label class="mb-1">Số điện thoại<span class="text-danger">*</span></label>
                    <div class="default-form-box">
                        @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { type = "text" } })
                        @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger" })
                    </div>
                    <label class="mb-1">Mật khẩu<span class="text-danger">*</span></label>
                    <div class="default-form-box">
                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { type = "password" } })
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                    </div>
                    <label class="mb-1">Mật khẩu xác nhận<span class="text-danger">*</span></label>
                    <div class="default-form-box">
                        @Html.EditorFor(model => model.PasswordConfirm, new { htmlAttributes = new { type = "password" } })
                        @Html.ValidationMessageFor(model => model.PasswordConfirm, "", new { @class = "text-danger" })
                    </div>
                    @ViewBag.Success
                    <div class="login_submit">
                        <button class="btn btn-md btn-black-default-hover mb-4 w-100" style="height:45px;" type="submit">Đăng ký</button>
                    </div>
                    <div class="d-flex justify-content-center">
                        <span>Đã có tài khoản?</span><a href="@Url.Action("Login","Account")" style="font-weight:600;margin-left:5px;">Đăng nhập</a>
                    </div>
                </form>
                    }
                </div>
            </div>
            <!-- End register area -->
        </div>
    </div>
</div>
<!-- End customer register section -->
@section scripts{
    <script src="~/Scripts/UserJS/jquery.validate.min.js"></script>
    <script src="~/Scripts/UserJS/jquery.validate.unobtrusive.js"></script>
}